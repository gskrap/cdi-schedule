<div class="jumbotron">
  <h1>Locations</h1>
  <p id="notice"><%= notice %></p>
    <% @locations.each do |location| %>
      <h2><%= location.name %></h2>
      <%= link_to 'Edit', edit_location_path(location), class: "btn btn-warning btn-xs" %>
      <%= link_to 'Delete', location, method: :delete, class: "btn btn-danger btn-xs", data: { confirm: 'Are you sure?' } %>
    <% end %>
  <br><br>
  <div><%= link_to 'New Location', new_location_path, class: "btn btn-primary btn-sm" %></div>
  <br>
  <%= link_to 'back', admin_path %>
</div>
